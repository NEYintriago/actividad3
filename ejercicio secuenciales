//Usamos Si-Entonces
//Mostramos los resultados

funcion arreglo54
	
	Escribir "Buscar elementos"
	Definir a, c, z, vector Como Entero
	Dimension vector[10]
	Para a = 1 Hasta 10 Con Paso 1 Hacer
		Escribir "Ingrese un numero"
		leer vector(a)
	Fin Para
	Escribir "Ingrese el numero a buscar"
	leer c
	z = 0
	Para a = 1 Hasta 10 Con Paso 1 Hacer
		si c = vector(a) Entonces
			Escribir "El numero ", c ," se encuentra en la ubicacion:" a
			z = 1
		FinSi
	Fin Para
	Si z = 0 Entonces
		Escribir "El numero ", c ," no se encuentra en el vector"
	FinSi
FinFuncion
